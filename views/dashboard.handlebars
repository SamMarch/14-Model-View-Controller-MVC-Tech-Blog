<div class="p-3 space-y-6 max-w-screen-lg mx-auto">
  {{#each blogs as |blog|}}
    <a href="/blog/{{blog.id}}"><div
        class="bg-teal-500 box-content p-3 rounded-md shadow-md shadow-teal-900 hover:scale-[1.05] mt-10 transition-all duration-300"
      >
        <div
          class="bg-teal-900 text-zinc-200 rounded-t-md text-center font-bold p-3"
        >
          {{blog.title}}
        </div>
        <div class="bg-teal-200 p-1">{{blog.content}}</div>
        <div class="text-xs pt-3">Posted on:
          {{displayTime blog.createdAt}}</div>
        <div class="text-xs">Author: {{blog.user.username}}</div>
      </div>
    </a>
  {{/each}}
</div>

<div class="p-3 space-y-6 max-w-screen-lg mx-auto">
  <div
    class="bg-teal-500 box-content p-3 rounded-md shadow-md shadow-teal-900 mt-10"
  >
    <h2
      class="bg-teal-900 text-zinc-200 rounded-t-md text-center font-bold p-3 mb-5"
    >New Blog</h2>
    <form id="blogSubmitForm">
      {{! create a form to submit a new blog }}
      <div class="mb-3 flex flex-col">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          id="title"
          placeholder="Enter a title"
        />
      </div>
      <div class="mb-3 flex flex-col">
        <label for="title" class="form-label">Content</label>
        <textarea
          class="form-control"
          id="content"
          rows="3"
          placeholder="Enter your blog here"
        ></textarea>
      </div>
      <button
        id="blogSubmitBtn"
        type="submit"
        class="bg-teal-200 rounded-md px-5 hover:scale-[1.1] mt-5"
      >
        Submit
      </button>
    </form>
  </div>
</div>

<script src="/js/blog.js"></script>